<section class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <h1>SCBWI Florida Writing Boot Camps</h1>
            <h3>
                Saturday, September 24, 2016<br />
                8:30am - 4:30pm
            </h3>
        </div>
    </div>
</section>
<hr />
<section class="container-fluid" ng-controller="ScbwiController as main">
    <div class="row">
        <div class="col-md-2">
            i'm on the left!!
        </div>
        <div class="col-md-10">
            <form name="user">
                <div class="form-group">
                    <label for="firstname">First Name</label>
                    <input class="form-control" type="text" name="firstname" ng-model="main.model.firstname" required />
                </div>
                <div class="form-group">
                    <label for="lastname">Last Name</label>
                    <input class="form-control" type="text" name="lastname" ng-model="main.model.lastname" required />
                </div>
                <div class="form-group">
                    <label for="address1">Address 1</label>
                    <input type="text" class="form-control" name="address1" ng-model="main.model.address1" required />
                </div>
                <div class="form-group">
                    <label for="address2">Address 2</label>
                    <input type="text" class="form-control" name="address2" ng-model="main.model.address2" required />
                </div>
                <div class="form-group">
                    <label for="city">City</label>
                    <input type="text" class="form-control" name="city" ng-model="main.model.city" required />
                </div>
                <div class="form-group">
                    <label for="state">State</label>
                    <input type="text" class="form-control" name="state" ng-model="main.model.state" required />
                </div>
                <div class="form-group">
                    <label for="zip">Zip</label>
                    <input type="text" class="form-control" name="zip" ng-model="main.model.zip" required />
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="text" class="form-control" name="email" ng-model="main.model.email" required />
                </div>
                <div class="form-group">
                    <label for="phone">Phone Number</label>
                    <input type="tel" class="form-control" name="phone" ng-model="main.model.phone" required />
                </div>
                <hr />
                <div class="form-group">
                    <label for="member">Are you a member?</label>
                    <div class="radio">
                        <label>
                            <input type="radio" name="member" ng-model="main.model.member" value="true" /> Yes
                        </label>
                    </div>
                    <div class="radio">
                        <label>
                            <input type="radio" name="member" ng-model="main.model.member" value="false" /> No
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <label for="location">Choose your location</label>
                    <div class="radio" ng-repeat="loc in main.locations">
                        <label>
                            <input type="radio" name="locradio" ng-model="main.model.locationid" value="{{loc.id}}" />
                            {{loc.title}}<br />
                            with {{loc.speakers}}<br />
                            {{loc.description}}
                        </label>
                    </div>
                </div>
                <hr />
                <div class="form-group">
                    <label for="coupon">Coupon Code (if you have one, you'll know it)</label>
                    <input type="text" class="form-control" name="coupon" ng-model="main.model.codeused" />
                </div>
                <hr />
                <div class="form-group">
                    <div ng-show="main.step1">
                        <button ng-click="main.submit();">Calculate Total</button>
                    </div>
                    <div ng-show="main.step2">
                        <p>
                            <span ng-if="main.model.usedcode">Your code was valid!</span><br />
                            Your total is: ${{main.model.total}}.
                        </p>
                    </div>
                </div>
            </form>
            <div ng-show="main.step3">
                <form action="https://www.paypal.com/cgi-bin/webscr" method="post">
                    <input type="hidden" name="cmd" value="_xclick" />
                    <input type="hidden" name="business" value="linda@scbwiflorida.com" />
                    <input type="hidden" name="item_name" value="SCBWI Florida Summer Bootcamp" />
                    <input type="hidden" name="currency_code" value="USD" />
                    <input type="hidden" name="custom" value="{{main.model.paypalid}}" />
                    <input type="hidden" name="amount" value="{{main.model.total}}" />
                    <input type="submit" name="submit" value="Continue" />
                </form>
            </div>
        </div>
    </div>
</section>